---
import Benefits from "../jsons/benefits.json";
---

<section class="benefits">
  <div class="logo-container">
    <img src="./images/benefits.png" alt="" class="benefits-img" />
    <hr class="hr" />
  </div>

  <article class="benefits-container">
    {
      Benefits.map((benefit) => (
        <div class="div">
          <img src={`./images/${benefit.img}`} alt="" class="b-img" />
          <p class="b-p">{benefit.content}</p>
        </div>
      ))
    }
  </article>
</section>

<style>
  .benefits {
    .logo-container {
      width: 100%;
      display: flex;
      justify-content: center;
      flex-direction: column;

      .hr {
        width: 40%;
        margin: 15px auto 45px;
        border-color: #1e3c8a;
      }

      .benefits-img {
        width: 40%;
        margin: 95px auto 15px;
      }
    }

    .div {
      width: 400px;
      height: 80px;
      margin: 5px 0;
      display: flex;
      align-items: center;
      background-image: url("./images/bi.png");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;

      .b-img {
        width: 45px;
        height: 45px;
        margin-left: 18px;
        margin-right: 20px;
      }

      .b-p {
        color: aliceblue;
      }
    }
  }

  .benefits-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  @media (max-width: 768px) {
    .benefits {
      .logo-container {
        .hr {
          width: 80%;
          margin: 15px auto 45px;
          border-color: #1e3c8a;
        }

        .benefits-img {
          width: 80%;
          margin: 95px auto 15px;
        }
      }
    }

    .benefits-container {
      justify-content: center;
      .div {
        width: 300px;
        height: 60px;
        margin: 5px 0;
        display: flex;
        align-items: center;
        background-image: url("./images/bi.png");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;

        .b-img {
          width: 35px;
          height: 35px;
          margin-left: 14px;
          margin-right: 20px;
        }

        .b-p {
          color: aliceblue;
          font-size: 14px;
        }
      }
    }
  }
</style>
