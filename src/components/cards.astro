---
import Cards from "../jsons/cards.json";
---

<article class="cards-container">
  <img src="./images/Banner1.png" alt="" class="banner-img" />
  <section class="info-card-container">
    {
      Cards.map((Card) => (
        <div class="card">
          <h2 class="card-title">{Card.title}</h2>
          <p class="card-content">{Card.content}</p>
        </div>
      ))
    }
  </section>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    margin: 60px 0;
    box-sizing: border-box;
  }

  .banner-img {
    width: 100%;
    margin-bottom: 60px;
    transition: 0.3s;
  }
  .banner-img:hover {
    transform: scale(1.1);
  }

  .info-card-container {
    width: 100%;
    display: flex;
    justify-content: space-between;

    .card {
      width: 250px;
      height: 300px;
      background-color: #1e3c8a;
      color: white;
      padding: 15px;
      transition: 0.3s;

      .card-title {
        text-align: center;
      }
    }

    .card-content {
      text-align: justify;
    }

    .card:hover {
      transform: scale(1.1);
    }
  }

  @media (max-width: 768px) {
    .cards-container {
      margin: 20px 0;
    }

    .banner-img {
      display: none;
    }
    .info-card-container {
      width: 100%;
      height: auto;
      display: flex;
      flex-direction: column;
      justify-content: space-between;

      .card {
        width: auto;
        height: auto;
        margin: 10px 0;
      }
    }
  }
</style>
